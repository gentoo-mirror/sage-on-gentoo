<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
	<maintainer type="person">
		<email>francois.bissey@canterbury.ac.nz</email>
		<name>Francois Bissey</name>
	</maintainer>
	<use>
		<flag name='testsuite'>
			If activated installs Sage's sources into
			/usr/share/sage/devel/sage to enable testing
		</flag>
		<flag name='modular_decomposition'>
			build the bindings to the modular_decomposition library
		</flag>
		<flag name='bliss'>
			build the bindings to the bliss library
		</flag>
		<flag name='html'>
			build and install html documentation
		</flag>
		<flag name='bin-html'>
			install pre-built html documentation
		</flag>
		<flag name='bin-pdf'>
			install pre-built pdf documentation
		</flag>
		<flag name='manifolds'>
			install the optional manifolds package from http://sagemanifolds.obspm.fr
		</flag>
	</use>
</pkgmetadata>
